<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |x| %>
      <tr>
        <td><%= x.title %></td>
        <td><%= x.start %></td>
        <td><%= x.end %></td>
        <td><%= x.content %></td>
        <td><%= x.freez %></td>
        <td><a href="posts/show/<%=x.id%>">show</a></td>
        <td><%= link_to 'Edit', edit_post_path(x) %></td>
        <td><%= link_to 'Destroy', x, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Post', new_post_path %>

<%= form_tag(posts_path, method: :get) do %>
  <%= date_field_tag :date, params[:date] %>
  <%= check_box_tag :cold, checked = true %>
  <%= submit_tag '날짜 확인', name: nil %>

<% end %>
